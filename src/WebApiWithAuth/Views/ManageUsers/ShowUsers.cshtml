@using WebApiWithAuth.ViewModels.ManageUsers
@model UsersViewModel
@{
	ViewBag.Title = "Users List";
}

<h1>Users List</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				ID
			</th>
			<th>
				Username
			</th>
			<th>
				Email
			</th>
			<th>
				Roles
			</th>
		</tr>
	</thead>
	<tbody>
	@foreach (var user in Model.Users)
	{
		<tr>
			<th>
				@user.Id
			</th>
			<td>
				@user.UserName
			</td>
			<td>
				@user.Email
			</td>
			<td>
				[@string.Join(", ", user.Roles)]
			</td>
		</tr>
	}
	</tbody>
</table>
